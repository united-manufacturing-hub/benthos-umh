{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  ],
  "enabledManagers": [
    "dockerfile",
    "gomod"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "minimumReleaseAge": "7 days",
  "timezone": "Europe/Berlin",
  "schedule": ["* * * * 0"]
}

